<IfModule mod_rewrite.c>
    # Activar rewrite
    RewriteEngine On

    # Establecer directorio base
#    RewriteBase /

    # === SERVIR ASSETS DIRECTAMENTE DESDE RESOURCES ===
    # Imágenes desde resources/images/
    RewriteRule ^images/(.*)$ resources/images/$1 [L]

    # Uploads desde public/uploads/ (archivos subidos por usuarios)
    RewriteRule ^uploads/(.*)$ public/uploads/$1 [L]

    # === ERRORES PERSONALIZADOS ===
    ErrorDocument 404 /errors/404
    ErrorDocument 500 /errors/500

    # === ROUTING PRINCIPAL ===
    # Si el archivo existe, servirlo directamente
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Si es un directorio y existe, servirlo
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]


    # Todo lo demás va al front controller
    RewriteRule ^(.*)$ public/index.php [QSA,L]
#    RewriteCond %{REQUEST_URI} !^/public/
#    RewriteRule ^(.*)$ public/index.php [QSA,L,NC]


</IfModule>

# === CONFIGURACIÓN CORS ===
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# === SEGURIDAD ===
# Proteger archivos sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|md)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger carpetas del proyecto
<IfModule mod_alias.c>
    RedirectMatch 403 /App/
    RedirectMatch 403 /vendor/
    RedirectMatch 403 /\.git
</IfModule>

# Cache para assets estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>


